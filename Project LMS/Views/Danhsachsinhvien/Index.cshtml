@model IEnumerable<Project_LMS.Models.Danh_sách_sinh_viên>

@{
    ViewBag.Title = "Index";
}

<h2>Danh sách sinh viên</h2>

<p>
    @Html.ActionLink("Thêm học viên", "Create")
</p>
@using (Html.BeginForm("Index", "Danhsachsinhvien", FormMethod.Post))
{
    <div class="form-group form-inline">
        <input type="text" name="SearchString" placeholder="Nhập tên sinh viên" class="form-control" />
        <input type="submit" class="btn btn-default" value="Tìm kiếm" />
    </div>
}
<table class="table">
    <tr>
        <th>
            Tên học viên
        </th>
        <th>
            Lớp
        </th>
        <th>
            Khóa/Khối
        </th>
        <th>
            Đối tượng
        </th>
        <th>
            Số điện thoại
        </th>
        <th>
            Ngày nhập học
        </th>
        <th>
            Học Phí
        </th>
        <th>
            Trạng thái
        </th>
        <th>
            Thực thu
        </th>
        <th>
            Ngày thu
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.tenhocvien)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.lop)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.khoa_khoi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.doituong)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.sdt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ngaynhaphoc)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.hocphi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.trangthai)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.thucthu)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ngaythu)
            </td>
            <td>
                @Html.ActionLink("Sửa", "Edit", new { id = item.mahocvien }) |
                @Html.ActionLink("Thu học phí", "Status", new { id = item.mahocvien }) |
                @Html.ActionLink("Chi tiết", "Details", new { id = item.mahocvien }) |
                @Html.ActionLink("Xóa", "Delete", new { id = item.mahocvien }) |

            </td>
        </tr>
    }

</table>
